
{{#each News}}
	<div class="card col-md-6 comment" style="padding-bottom:15px; padding-top= 15px;">
		<img class="card-img-top pic" src="{{this.image}}" style="height: 180px; width: 380px; display: block;">
		<div class="card-block">
		  <h4 class="card-title" id="news">{{this.title}}</h4>
		  <a id="article" href="http://www.theonion.com{{this.link}}">{{this.link}}</a>
		  <br></br>
		 <button type="button" class="btn btn-default btn-sm commentButton" data-id="{{this._id}}">Comment</button>
		<a href="/favorites" type="button" class="btn btn-default btn-sm unfavorite" data-status="{{this.saved}}" data-id="{{this._id}}">Unfavorite</a>
		<div class="addComment"></div>
		</div>
	</div>
{{/each}}